{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2017", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@todo-list/app/component/modal": [
        "libs/app/component/modal/src/index.ts"
      ],
      "@todo-list/app/component/todo-form": [
        "libs/app/component/todo-form/src/index.ts"
      ],
      "@todo-list/app/component/top-bar": [
        "libs/app/component/top-bar/src/index.ts"
      ],
      "@todo-list/app/directives/change-mat-icon-style": [
        "libs/app/directives/change-mat-icon-style/src/index.ts"
      ],
      "@todo-list/app/pages/home": ["libs/app/pages/home/src/index.ts"],
      "@todo-list/app/pages/login": ["libs/app/pages/login/src/index.ts"],
      "@todo-list/models/models": ["libs/models/models/src/index.ts"],
      "@todo-list/schema/todo": ["libs/schema/todo/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
